
[Interface]
Address = {{ server_ip }}
ListenPort = 51820
PrivateKey = {{ server_private_key }}
SaveConfig = true

# DNS (served to clients)
# Optional: run Unbound/AdGuard on the host and use 10.8.0.1
# PostUp/Down apply basic forwarding and NAT; adjust interface names as needed.
PostUp = sysctl -w net.ipv4.ip_forward=1
PostUp = iptables -t nat -A POSTROUTING -s 10.8.0.0/24 -o {{ egress_iface }} -j MASQUERADE
PostDown = iptables -t nat -D POSTROUTING -s 10.8.0.0/24 -o {{ egress_iface }} -j MASQUERADE

